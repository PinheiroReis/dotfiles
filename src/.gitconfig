[init]
  defaultBranch = master

[advice]
  detachedHead = false

[core]
	excludesFile = ~/.gitignore_global
	editor = vim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = side-by-side line-numbers navigate dark decorations
  syntax-theme = Dracula
  plus-style = syntax "#003800"
  minus-style = syntax "#3f0001"
  true-color = always

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = cyan ul

[delta "line-numbers"]
  line-numbers-left-style = cyan
  line-numbers-right-style = cyan
  line-numbers-minus-style = 124
  line-numbers-plus-style = 28

[merge]
  conflicStyle = zdiff3

[alias]
  i = init
	a = add
	ps = push
	pl = pull
	l = log
	c = commit -m
	s = status
	co = checkout
	br = branch
  brr = branch --remote
	bl = blame
	rs = reset
	rb = rebase
	rl = reflog
	rt = restore
  rv = revert
	d = diff
	r = remote
  cl = clean
	ca = commit --amend -m
	ds = diff --staged
	aa = add --all
	sh = show
	t = tag
	m = merge
	f = fetch
